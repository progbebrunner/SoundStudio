<Application x:Class="SoundStudio.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SoundStudio"
             StartupUri="Windows\AuthorizathionWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="ColorAccent" Color="LightSkyBlue"/>
        <SolidColorBrush x:Key="ColorSecondary" Color="LightCyan"/>
        <SolidColorBrush x:Key="ColorPrimary" Color="White"/>
        
        <Style TargetType="TextBlock" x:Key="TBLV">
            <Setter Property="Width" Value="240"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontFamily" Value="Gill Sans MT"/>
        </Style>
        <Style TargetType="TextBox" x:Key="TBXLV">
            <Setter Property="Width" Value="239.9"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontFamily" Value="Gill Sans MT"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="TBHeader">
            <Setter Property="Margin" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Gill Sans MT"/>
        </Style>
        <Style TargetType="ComboBox" x:Key="cbAddEdit">
            <Setter Property="FontSize" Value="55"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="600"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style TargetType="Button" x:Key="LVBEdit">
            <Setter Property="FontSize" Value="33"/>
            <Setter Property="Width" Value="auto"/>
            <Setter Property="Background" Value="{StaticResource ColorSecondary}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="20 0"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Application.Resources>
    
    
</Application>
